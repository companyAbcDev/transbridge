
<%- include('./ejs/header', { pageName: 'index' }) %>

<body class="d-flex flex-column min-vh-100">
    <div class="wrap">
        <header>

            <%- include('./ejs/nav') %>
        </header>


        <main class="bridge-main">
            <div class="main-bg"></div>

            <div class="bridge size-desktop">
                <!-- LEFT -->
                <div>
                    <button class="right-bt" onclick="minBridgeMov('left')">
                        <span>Portfolio</span> <i></i>
                    </button>
                    <div class="bridge-hd">
                        <h1>Token Bridge</h1>
                        <p>
                            체인을 통해 자산을 보내보세요.
                        </p>
                    </div>

                    <div class="bridge-form">
                        <div class="mainnet-select" value="mainnet-from">

                            <p>From...</p>

                            <ul class="mainnet-select-list">
                                <li class="fromNetworkChange" data-network="sepolia"
                                    data-image="/img/ethereum.png">
                                    <label>
                                        <input type="radio" name="mainnet-change" value="0x5">
                                        <div>
                                            <div>
                                                <i class="token-icon"><img src="/img/ethereum.png"></i>
                                                Sepolia
                                            </div>

                                        </div>
                                    </label>
                                </li>
                                <li class="fromNetworkChange" data-network="baobab"
                                    data-image="/img/klaytn.png">
                                    <label>
                                        <input type="radio" name="mainnet-change" value="0x3e9">
                                        <div>
                                            <div>
                                                <i class="token-icon"><img src="/img/klaytn.png"></i>
                                                Baobab
                                            </div>
                                        </div>
                                    </label>
                                </li>
                                <li class="fromNetworkChange" data-network="mumbai"
                                    data-image="/img/polygon.png">
                                    <label>
                                        <input type="radio" name="mainnet-change" value="0x13881">
                                        <div>
                                            <div>
                                                <i class="token-icon"><img src="/img/polygon.png"></i>
                                                Mumbai
                                            </div>
                                        </div>
                                    </label>
                                </li>
                                <li class="fromNetworkChange" data-network="tbnb" data-image="/img/binance.png">
                                    <label>
                                        <input type="radio" name="mainnet-change" value="0x61">
                                        <div>
                                            <div>
                                                <i class="token-icon"><img src="/img/binance.png"></i>
                                                BNB Testnet
                                            </div>
                                        </div>
                                    </label>
                                </li>

                            </ul>

                        </div>
                        <div class="mainnet-select" value="mainnet-to">

                            <p>To...</p>

                            <ul class="mainnet-select-list">
                                <li class="toNetworkChange" data-network="sepolia"
                                    data-image="/img/ethereum.png">
                                    <label>
                                        <input type="radio" name="mainnet-list" value="sepolia">
                                        <div>
                                            <div>
                                                <i class="token-icon"><img src="/img/ethereum.png"></i>
                                                Sepolia
                                            </div>

                                        </div>
                                    </label>
                                </li>
                                <li class="toNetworkChange" data-network="baobab" data-image="/img/klaytn.png">
                                    <label>
                                        <input type="radio" name="mainnet-list" value="baobab">
                                        <div>
                                            <div>
                                                <i class="token-icon"><img src="/img/klaytn.png"></i>
                                                Baobab
                                            </div>
                                        </div>
                                    </label>
                                </li>
                                <li class="toNetworkChange" data-network="mumbai" data-image="/img/polygon.png">
                                    <label>
                                        <input type="radio" name="mainnet-list" value="mumbai">
                                        <div>
                                            <div>
                                                <i class="token-icon"><img src="/img/polygon.png"></i>
                                                Mumbai
                                            </div>
                                        </div>
                                    </label>
                                </li>
                                <li class="toNetworkChange" data-network="tbnb" data-image="/img/binance.png">
                                    <label>
                                        <input type="radio" name="mainnet-list" value="tbnb">
                                        <div>
                                            <div>
                                                <i class="token-icon"><img src="/img/binance.png"></i>
                                                BNB Testnet
                                            </div>
                                        </div>
                                    </label>
                                </li>

                            </ul>

                        </div>
                        <div class="mainnet-select" value="token">
                            <div class="mainnet-search">
                                <input class="searchToken" type="text" placeholder="토큰 이름">
                                <i></i>
                            </div>

                            <p>Token List</p>

                            <ul class="mainnet-select-list token-popup-list">

                            </ul>

                        </div>

                        <div class="bridge-nft-from">
                            <div class="mainnet-box" onclick="mainnetSelectOpen(event, 'mainnet-from')">
                                <i class="token-icon fromNetworkImage">
                                    <img src="/img/ethereum.png" alt="">
                                </i>
                                <div>
                                    <span>From</span>
                                    <p class="fromNetwork">Sepolia</p>
                                </div>
                            </div>

                            <div class="from-adress adress-token">
                                <span style="display: none" class="selectedContract"></span>
                                <div class="token-mainnet" onclick="mainnetSelectOpen(event, 'token')">
                                    <i class="token-icon selectedImg"><img src="/img/transbridgelogo.png"></i>
                                    <span class="selectedName"></span>
                                </div>
                                <div class="token-input">
                                    <div>
                                        <input type="number" class="bridgeAmount" placeholder="0.0000"
                                            style="-webkit-appearance: none; margin: 0;">
                                        <p><span class="selectedBalance">0.00</span> available</p>
                                    </div>
                                    <button class="maxAmount" onclick="maxAmount()" disabled="">Max</button>
                                </div>
                            </div>
                        </div>

                        <div class="bridge-nft-to">
                            <div class="mainnet-box" onclick="mainnetSelectOpen(event, 'mainnet-to')">
                                <i class="token-icon toNetworkImage">
                                    <img src="/img/ethereum.png" alt="">
                                </i>
                                <div>
                                    <span>To</span>
                                    <p class="toNetwork" style="display: none">sepolia</p>
                                    <p class="toNetworkFront">Sepolia</p>
                                </div>
                            </div>

                            <div class="adress-token">
                                <div class="token-mainnet" style="pointer-events: none;">
                                    <i class="token-icon selectedToImg"><img src="/img/transbridgelogo.png"></i>
                                    <span class="selectedToName">-</span>
                                </div>
                                <div class="token-input">
                                    <div>
                                        <input type="number" class="bridgeToAmount" placeholder="0.0000"
                                            style="-webkit-appearance: none; margin: 0;" readonly="">
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="bridge-total">
                            <ul>
                                <li>
                                    <span>Fees</span>
                                    <div class="baseFee">
                                        <p>
                                            0 <span>ETH</span>
                                        </p>
                                    </div>
                                </li>
                                <li>
                                    <span>Deploy Fees</span>
                                    <div class="nftDeployFee">
                                        <h1>0.00%</h1>
                                    </div>
                                </li>
                            </ul>
                            <div class="err-txt" style="display: none">
                                현재 잔액이 부족합니다.
                            </div>
                        </div>

                        <button class="bridge-nft-bt-disable">
                            Choose Token
                        </button>
                        <button class="bridge-nft-bt bridgeTokenAction" onclick="layerOpen('activity')"
                            style="display: none;">
                            Confirm Bridge
                        </button>
                    </div>

                </div>
                <!-- RIGHT -->
                <div>
                    <button class="left-bt" onclick="minBridgeMov('right')">
                        <i></i><span>bridge</span>
                    </button>
                    <div class="bridge-tap">
                        <label>
                            <input type="radio" name="bridge-tap" checked="">
                            <div>
                                Portfolio
                            </div>
                        </label>
                        <label onclick="historyTokenView()">
                            <input type="radio" name="bridge-tap">
                            <div>
                                Activity
                            </div>
                        </label>
                    </div>

                    <div class="bridge-portfolio">
                        <div class="wallet-disconnect" style="display: none;">
                            <div>
                                <p>
                                    kthulu bridge는 확장가능하며 안전한 크로스체인 통신네트워크입니다. <br>
                                    브릿지로 거래를 제출할 준비가 되면 지갑을 연결하세요.
                                </p>

                                <button>
                                    지갑연결
                                </button>
                            </div>
                        </div>

                        <div class="bridge-active bridgeStatusChk" style="display: none">
                            <div>
                                <span class="bridge-active-end">
                                    TODAY
                                </span>

                                <div class="bridge-active-send">
                                    <div id="statusFromNetwork">
                                        <i class="token-icon"></i>
                                        Ethereum
                                    </div>
                                    <div id="statusFromAccount">
                                        0xE...901c
                                    </div>
                                </div>
                                <i></i>
                                <div class="bridge-active-to">
                                    <div id="statusToNetwork">
                                        <i class="token-icon"></i>
                                        Ethereum
                                    </div>
                                    <div id="statusToAccount">
                                        0xE...901c
                                    </div>
                                </div>
                            </div>
                            <div>
                                <p>
                                    You can check it in the activity tab after 5 minutes.
                                </p>
                            </div>
                        </div>
                        <div class="bridge-list sepolia-connect">
                            <div class="bridge-list-mainnet">
                                <div>
                                    <i class="token-icon"><img src="/img/ethereum.png"></i>
                                    <span>Sepolia</span>
                                </div>
                                <div>
                                    <label>
                                        <input type="radio" name="mainnet-change" value="0xaa36a7">
                                        <div class="connect-bt" id="sepolia-connect-text">connect</div>
                                    </label>
                                    <div class="loader sepoliaLoader" style="display:none;"></div>
                                    <div class="down-icon sepoliaDown" onclick="nftListOpen(this)"><i></i></div>
                                </div>

                            </div>
                            <ul class="token-box sepolia-list" style="height: auto;">
                                <!-- 없 -->
                                <li class="sepoliaNoneToken" style="display: none;">
                                    <p>
                                        This Network does not have Token.
                                    </p>
                                </li>

                            </ul>

                        </div>
                        <div class="bridge-list baobab-connect">
                            <div class="bridge-list-mainnet">
                                <div>
                                    <i class="token-icon"><img src="/img/klaytn.png"></i>
                                    <span>Baobab</span>
                                </div>
                                <div>
                                    <label>
                                        <input type="radio" name="mainnet-change" value="0x3e9">
                                        <div class="connect-bt" id="baobab-connect-text">connect</div>
                                    </label>
                                    <div class="loader baobabLoader" style="display:none;"></div>
                                    <div class="down-icon baobabDown" onclick="nftListOpen(this)"><i></i></div>
                                </div>

                            </div>
                            <ul class="token-box baobab-list" style="height: auto;">
                                <!-- 없 -->
                                <li class="baobabsNoneToken" style="display: none;">
                                    <p>
                                        This Network does not have Token.
                                    </p>
                                </li>

                            </ul>

                        </div>
                        <div class="bridge-list mumbai-connect">
                            <div class="bridge-list-mainnet">
                                <div>
                                    <i class="token-icon"><img src="/img/polygon.png"></i>
                                    <span>Mumbai</span>
                                </div>
                                <div>
                                    <label>
                                        <input type="radio" name="mainnet-change" value="0x13881">
                                        <div class="connect-bt" id="mumbai-connect-text">connect</div>
                                    </label>
                                    <div class="loader mumbaiLoader" style="display:none;"></div>
                                    <div class="down-icon mumbaiDown" onclick="nftListOpen(this)"><i></i></div>
                                </div>
                            </div>
                            <ul class="token-box mumbai-list" style="height: auto;">
                                <!-- 없 -->
                                <li class="mumbaiNoneToken" style="display: none;">
                                    <p>
                                        This Network does not have Token.
                                    </p>
                                </li>

                            </ul>

                        </div>
                        <div class="bridge-list tbnb-connect">
                            <div class="bridge-list-mainnet">
                                <div>
                                    <i class="token-icon"><img src="/img/binance.png"></i>
                                    <span>BNB Testnet</span>
                                </div>
                                <div>
                                    <label>
                                        <input type="radio" name="mainnet-change" value="0x61">
                                        <div class="connect-bt" id="tbnb-connect-text">connect</div>
                                    </label>
                                    <div class="loader tbnbLoader" style="display:none;"></div>
                                    <div class="down-icon tbnbDown" onclick="nftListOpen(this)"><i></i></div>
                                </div>
                            </div>

                            <ul class="token-box tbnb-list" style="height: auto;">
                                <!-- 없 -->
                                <li class="tbnbNoneToken" style="display: none;">
                                    <p>
                                        This Network does not have Token.
                                    </p>
                                </li>

                            </ul>

                        </div>

                    </div>

                    <div class="bridge-activity" style="display: none;">
                        <div class="wallet-disconnect" style="display: none;">
                            <div>
                                <p>
                                    30일 동안 발생한 내역이 없습니다.
                                </p>
                            </div>
                        </div>

                        <div class="bridge-active">

                        </div>
                    </div>

                </div>

            </div>

        </main>

        <div class="layer layer-connect">
            <div class="layer-inner">
                <div class="close-icon" onclick="layerClose(this)"><i></i></div>

                <div class="connect">

                    <div class="connect-wallet-list">
                        <h1>Connect a Wallet</h1>

                        <div>
                            <p>Popular</p>
                            <ul>
                                <li>
                                    <i>
                                        <img src="/img/main_bluelogo.png" alt="">
                                    </i>
                                    <div>
                                        <h2>Kthulu</h2>
                                    </div>
                                </li>
                                <li>
                                    <i style="background: #fff;">
                                        <img src="/img/metamask.png" alt="">
                                    </i>
                                    <div>
                                        <h2>Metamask</h2>
                                    </div>
                                </li>
                                <li>
                                    <i>
                                        <img src="/img/coinbase.png" alt="">
                                    </i>
                                    <div>
                                        <h2>Coinbase Wallet</h2>
                                    </div>
                                </li>
                                <li>
                                    <i>
                                        <img src="/img/connect.png" alt="">
                                    </i>
                                    <div>
                                        <h2>WalletConnect</h2>
                                    </div>
                                </li>
                            </ul>
                        </div>

                        <div>
                            <p>Other</p>
                            <ul>
                                <li>
                                    <i>
                                        <img src="/img/kaikas.png" alt="">
                                    </i>
                                    <div>
                                        <h2>KaiKas</h2>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>


                    <div class="connect-inner">
                        <!-- 지갑 있을 때 -->
                        <div class="connect-wallet" style="display: flex;">
                            <div>
                                <div class="opening-wallet">
                                    <i>
                                        <img src="/img/metamask.png" alt="">
                                    </i>
                                    <h2>Connect MetaMask</h2>
                                    <p>
                                        서비스 이용을 위하여 지갑을 연결해주세요.
                                    </p>


                                    <button class="connectMetamask" onclick="connectMetamask()">Connect Wallet</button>

                                    <!-- display: inline-block 해주기  -->
                                    <div class="loader" style="display:none;"></div>
                                </div>
                            </div>
                        </div>
                        <!-- 지갑 없을 때 -->
                        <div class="connect-chrome" style="display: none;">
                            <h1>Get Metamask Wallet</h1>

                            <div>
                                <div class="chrome-item">
                                    <i>
                                        <img src="/img/chrome.png" alt="">
                                    </i>
                                    <div>
                                        <h2>Rabby Wallet for Chrome</h2>
                                        <p>
                                            Access your wallet right from <br>
                                            your favorite web browser.
                                        </p>
                                        <button
                                            onclick="location.href='https://chrome.google.com/webstore/detail/metamask/nkbihfbeogaeaoehlefnkodbefgpgknn?utm_source=ext_sidebar&amp;hl=ko'">
                                            Add to Chrome
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>

        <div class="layer layer-activity">
            <div class="layer-inner">
                <h1>
                    Follow steps
                </h1>

                <div class="layer-activity-step">
                    <div>
                        <i>
                            <div class="loader approveLoading"></div>
                            <img class="approveChk" src="/img/act-ckd.png" alt="" style="display: none;">
                        </i>
                        <div>
                            <h2>Approve</h2>
                            <p>This transaction is conducted only
                                once per collection</p>
                        </div>
                    </div>
                    <div>
                        <i>
                            <div class="loader nftBridgeLoading" style="display: none"></div>
                            <img class="nftBridgeChk" src="/img/act-ckd.png" alt="" style="opacity: 0.3;">
                        </i>
                        <div>
                            <h2>Bridge</h2>
                            <p>Please sign the bridge request</p>
                        </div>
                    </div>
                </div>

                <button onclick="layerClose(this)">
                    Cancel
                </button>
            </div>
        </div>

        <div class="layer layer-wallet">
            <div class="layer-inner">

                <div class="wallet-now">
                    <i class="wallet-icon">
                        <img src="/img/metamask.png" alt="">
                    </i>
                    <div>
                        <!-- 복사 작동하는 거안에 toast넣기 -->
                        <button class="wallet-copy" onclick="toastAlert()">
                            <span id="popupAccount"></span>
                            <i></i>
                        </button>
                        <button><span id="popupBalance"></span></button>
                    </div>
                </div>
                <div class="close-icon" onclick="layerClose(this)"><i></i></div>

                <div class="wallet-opt-bt">
                    <button onclick="changeAccount()">
                        <i></i>
                        <div>Change account</div>
                    </button>
                    <button onclick="disconnectMetamask()">
                        <i></i>
                        <div>Disconnect</div>
                    </button>
                </div>

            </div>
            <div class="toast_alert">
                <i></i> <span>복사완료</span>
            </div>

        </div>

    </div>

<%- include('./ejs/footer', { pageName: 'index' }) %>