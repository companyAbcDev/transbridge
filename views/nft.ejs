                            <h1>Get Metamask Wallet</h1>

                            <div>
                                <div class="chrome-item">
                                    <i>
                                        <img src="/img/chrome.png" alt="">
                                    </i>
                                    <div>
                                        <h2>Rabby Wallet for Chrome</h2>
                                        <p>
                                            Access your wallet right from <br />
                                            your favorite web browser.
                                        </p>
                                        <button
                                            onclick="location.href='https://chrome.google.com/webstore/detail/metamask/nkbihfbeogaeaoehlefnkodbefgpgknn?utm_source=ext_sidebar&hl=ko'">
                                            Add to Chrome
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>

        <div class="layer layer-activity">
            <div class="layer-inner">
                <h1>
                    Follow steps
                </h1>

                <div class="layer-activity-step">
                    <div>
                        <i>
                            <div class="loader approveLoading"></div>
                            <img class="approveChk" src="/img/act-ckd.png" alt="" style="display: none;">
                        </i>
                        <div>
                            <h2>Approve</h2>
                            <p>This transaction is conducted only
                                once per collection</p>
                        </div>
                    </div>
                    <div>
                        <i>
                            <div class="loader nftBridgeLoading" style="display: none"></div>
                            <img class="nftBridgeChk" src="/img/act-ckd.png" alt="" style="opacity: 0.3;">
                        </i>
                        <div>
                            <h2>Bridge</h2>
                            <p>Please sign the bridge request</p>
                        </div>
                    </div>
                </div>

                <button>
                    Check Wallet
                </button>
            </div>
        </div>

        <div class="layer layer-wallet">
            <div class="layer-inner">

                <div class="wallet-now">
                    <i class="wallet-icon">
                        <img src="/img/metamask.png" alt="">
                    </i>
                    <div>
                        <!-- 복사 작동하는 거안에 toast넣기 -->
                        <button class="wallet-copy" onclick="toastAlert()">
                            <span id="popupAccount"></span>
                            <i></i>
                        </button>
                        <button><span id="popupBalance"></span></button>
                    </div>
                </div>
                <div class="close-icon" onclick="layerClose(this)"><i></i></div>

                <div class="wallet-opt-bt">
                    <button onclick="changeAccount()">
                        <i></i>
                        <div>Change account</div>
                    </button>
                    <button onclick="disconnectMetamask()">
                        <i></i>
                        <div>Disconnect</div>
                    </button>
                </div>

            </div>
            <div class="toast_alert">
                <i></i> <span>복사완료</span>
            </div>

        </div>

    </div>

